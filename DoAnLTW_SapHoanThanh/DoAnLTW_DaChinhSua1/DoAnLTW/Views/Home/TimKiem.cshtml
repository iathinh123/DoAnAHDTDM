
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/LayoutPhuKienDTh.cshtml";
}

@using DoAnLTW.Models
@model List<SanPham>

<div class="container mt-4">
    <div class="row">
        @foreach (SanPham sp in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="~/Content/HinhAnhPhuKien/@sp.HinhAnh"
                         class="card-img-top img-fluid"
                         alt="@sp.TenSP"
                         style="height: 250px; object-fit: contain; padding: 10px;" />
                    <div class="card-body text-center">
                        <h6 class="card-title text-primary">@sp.TenSP</h6>
                        <p class="card-text text-danger fw-bold">@string.Format("{0:N0} ₫", sp.Gia)</p>
                        <a href="@Url.Action("ChiTietSanPham", "Home", new { id = sp.MaSP })"
                           class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

