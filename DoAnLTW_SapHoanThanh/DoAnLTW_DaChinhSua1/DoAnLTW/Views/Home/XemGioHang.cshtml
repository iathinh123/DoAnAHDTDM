
@using DoAnLTW.Models
@model List<CartItem>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/LayoutPhuKienDTh.cshtml";
}

<div class="container mt-4">
    <h3 class="text-center text-danger fw-bold mb-4">
        <i class="bi bi-cart3"></i> GIỎ HÀNG
    </h3>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center py-5 shadow-sm">
            <h4>Giỏ hàng đang trống!</h4>
            <p class="mb-4">Hãy chọn thêm sản phẩm để mua sắm nhé.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary fw-bold px-4">
                <i class="bi bi-arrow-left"></i> Quay lại trang chủ
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th colspan="2" class="ps-4">Sản phẩm</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end pe-4">Thành tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4" style="width: 100px;">
                                            <img src="~/Content/HinhAnhPhuKien/@item.HinhAnh"
                                                 alt="@item.TenSP"
                                                 class="img-fluid rounded border"
                                                 style="width: 80px; height: 80px; object-fit: cover;" />
                                        </td>
                                        <td>
                                            <h6 class="mb-0 text-dark fw-semibold">@item.TenSP</h6>
                                        </td>
                                        <td class="text-center fw-bold text-secondary">
                                            @string.Format("{0:N0}đ", item.DonGia)
                                        </td>
                                        <td class="text-center" style="min-width: 120px;">
                                            @using (Html.BeginForm("CapNhatGioHang", "Home", new { maSP = item.MaSP }, FormMethod.Post, new { @class = "d-flex justify-content-center align-items-center" }))
                                            {
                                                <input type="number" min="1" name="soLuongMoi"
                                                       value="@item.SoLuong"
                                                       class="form-control form-control-sm text-center me-2"
                                                       style="width: 60px;" />
                                                <button type="submit" class="btn btn-sm btn-light border" title="Cập nhật số lượng">
                                                    <i class="bi bi-arrow-clockwise"></i>
                                                </button>
                                            }
                                        </td>
                                        <td class="text-end pe-4 fw-bold text-danger">
                                            @string.Format("{0:N0}đ", item.ThanhTien)
                                        </td>
                                        <td class="text-center">
                                            <a href="@Url.Action("XoaGioHang", new { maSP = item.MaSP })"
                                               class="text-secondary fs-5 text-decoration-none px-2"
                                               title="Xóa sản phẩm"
                                               onclick="return confirm('Bạn chắc chắn xóa sản phẩm này?');">
                                                &times;
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary fw-semibold">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-danger shadow-sm sticky-top" style="top: 20px; z-index: 1;">
                    <div class="card-header bg-danger text-white fw-bold text-center py-3">
                        <i class="bi bi-receipt"></i> TỔNG KẾT ĐƠN HÀNG
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Tạm tính:</span>
                            <span class="fw-bold">@string.Format("{0:N0}đ", ViewBag.TongTien)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Phí vận chuyển:</span>
                            <span class="fw-bold text-success">Miễn phí</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4 align-items-center">
                            <span class="fw-bold fs-5">Tổng tiền:</span>
                            <span class="fw-bold text-danger fs-3">@string.Format("{0:N0}đ", ViewBag.TongTien)</span>
                        </div>
                        <div class="d-grid">
                            <a href="@Url.Action("DatHang", "Home")" class="btn btn-danger btn-lg fw-bold py-3">
                                MUA NGAY
                            </a>
                        </div>
                        <div class="text-center mt-3">
                            <small class="text-muted fst-italic">(Đã bao gồm VAT nếu có)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

