@using DoAnLTW.Models
@model List<DanhMuc>

<div class="card shadow-sm border-0 rounded-3 overflow-hidden" style="max-width: 280px;">
    <!-- Tiêu đề -->
    <div class="card-header bg-danger text-white text-center fw-bold">
        DANH MỤC PHỤ KIỆN
    </div>

    <!-- Danh sách -->
    <div class="card-body p-3">
        <ul class="nav flex-column">
            @foreach (DanhMuc dmpk in Model)
            {
                <li class="nav-item">
                    <a class="nav-link text-danger fw-semibold py-1 text-decoration-none"
                       href="@Url.Action("PhanLoaiSPTheoDM", "Home", new { mp = dmpk.MaDM })">
                        @dmpk.TenDM
                    </a>
                </li>
            }
        </ul>
    </div>
</div>


<style>
    .card-body .nav-link:hover {
        color: #fff !important;
        background-color: #dc3545;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
        padding-left: 6px;
    }
</style>
